<div class="row">
  {{#if isNotEmpty}}
    <div class="grid-6 game-board-left-column">
      <div class="row">
        {{#each leftColumn as |card index|}}
          <div class="game-board-card-container grid-{{gridSize}} grid-{{gridSize}}-mobile">
            {{yield (hash value=card.value figure=setup.figure) (action "flip")}}
          </div>
        {{/each}}
      </div>
    </div>
    <div class="grid-6 game-board-right-column">
      <div class="row">
        {{#each rigthColumn as |card|}}
          <div class="game-board-card-container grid-{{gridSize}} grid-{{gridSize}}-mobile">
            {{yield (hash value=card.value figure=setup.figure) (action "flip")}}
          </div>
        {{/each}}
      </div>
    </div>
  {{else}}
    <p class="game-board-empty-message">
      THERE ISN'T ANY CARD TO DISPLAY
    </p>
  {{/if}}
</div>
<div class="row section">
  <div class="grid-5 grid-5-mobile">
    {{#link-to "application" class="back"}}&lt; Go Back{{/link-to}}
  </div>
  <div class="grid-7 grid-7-mobile score">
    <span class="strong">Hits:</span><span class="hits"> {{hits}} </span>
    <span class="strong">Misses:</span><span class="misses"> {{misses}} </span>
    <span class="strong">Rate:</span><span> {{rate}}% </span>
  </div>
</div>
